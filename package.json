{
  "name": "@plasmohq/mozilla-addons-api",
  "version": "2.3.2",
  "description": "Mozilla Add-ons API for NodeJS",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16.14"
  },
  "scripts": {
    "dev": "esbuild src/index.ts --format=esm --bundle --watch --sourcemap --platform=node --outdir=dist --external:got --external:jsonwebtoken",
    "build": "tsup src/index.ts --format esm --minify --dts-resolve",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "clean": "rimraf dist",
    "prepublishOnly": "run-s clean build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PlasmoHQ/mozilla-addons-api.git"
  },
  "author": "Plasmo Corp. <support@plasmo.com>",
  "keywords": [
    "browser-extensions",
    "firefox",
    "webext",
    "browser-addons",
    "browser-plugins"
  ],
  "license": "MIT",
  "dependencies": {
    "form-data-encoder": "2.0.1",
    "formdata-node": "4.3.3",
    "got": "12.1.0",
    "jsonwebtoken": "8.5.1"
  },
  "devDependencies": {
    "@jest/globals": "28.1.1",
    "@plasmohq/rps": "1.3.4",
    "@trivago/prettier-plugin-sort-imports": "3.2.0",
    "@types/jsonwebtoken": "8.5.8",
    "@types/node": "18.0.0",
    "cross-env": "7.0.3",
    "esbuild": "0.14.44",
    "jest": "28.1.1",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "ts-jest": "28.0.5",
    "tsup": "6.1.2",
    "typescript": "4.7.3"
  }
}
