{
  "name": "@plasmo-corp/mwu",
  "version": "1.8.0",
  "description": "Mozilla Webstore Upload",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "run-p dev:*",
    "dev:type": "tsc -w --emitDeclarationOnly",
    "dev:code": "esbuild index.ts --bundle --watch --platform=node --outdir=dist",
    "build": "run-p build:*",
    "build:type": "tsc --emitDeclarationOnly",
    "build:code": "esbuild index.ts --bundle --minify --platform=node --outdir=dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf dist",
    "prepare": "run-s clean build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/plasmo-corp/mwu.git"
  },
  "author": "Plasmo Corp. <support@plasmo.com>",
  "keywords": [
    "browser-extensions",
    "firefox",
    "webext",
    "browser-addons",
    "browser-plugins"
  ],
  "license": "MIT",
  "dependencies": {
    "sign-addon": "3.11.0"
  },
  "devDependencies": {
    "@plasmo-corp/rps": "1.2.1",
    "@trivago/prettier-plugin-sort-imports": "3.2.0",
    "@types/node": "17.0.21",
    "esbuild": "0.14.27",
    "prettier": "2.6.0",
    "rimraf": "3.0.2",
    "typescript": "4.6.3"
  }
}
